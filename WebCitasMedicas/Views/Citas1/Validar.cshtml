@using Modelo.Entidades

@model Cita

@{ ViewData["Title"] = "Validar";
    Layout = "~/Views/Shared/_Layout.cshtml"; }

<h1>Cita</h1>

<div class="container">
    <div class="row">
        <div class="col-sm-12">
            <h3>Ud. esta asignando la Cita: @Model.CitaId</h3>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-10">
            <form method="post" asp-action="Validar2">
                <input type="hidden" asp-for="CitaId" />

                <div class="form-group">
                    <label class="control-label">Fecha de Cita</label>
                    <input class="form-control" asp-for="Fecha_Cita" disabled />
                    <label class="control-label"> Fecha de Registro</label>
                    <input class="form-control" asp-for="Fecha_Registro" disabled />
                    <label class="control-label"> Hora de Cita</label>
                    <input class="form-control" asp-for="Hora" disabled />
                    <label class="control-label"> Paciente</label>
                    <input class="form-control" asp-for="Paciente.Nombre" disabled />
                    <label class="control-label"> Médico</label>
                    <input class="form-control" asp-for="Medico.Nombre" disabled />
                    <input type="hidden" asp-for="Estado" value="1" />
                    <label type="hidden" class="control-label"> Cale</label>
                    <input type="hidden" class="form-control" asp-for="CalendarioId" />
                </div>
                <div class="form-group">

                    <input type="submit" value="Validar" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
</div>

