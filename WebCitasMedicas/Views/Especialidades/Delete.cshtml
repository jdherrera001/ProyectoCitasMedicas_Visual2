@using Modelo.Entidades;
@model Especialidad
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<h1>Eliminacion de Horarios</h1>
<p>Formulario para el borrado de especialidades del Sistema de Citas Medicas</p>

<div class="container">
    <div class="row">
        <div class="col-sm-12">
            <h3>Esta seguro que desea eliminar la Especialidad: @Model.Nombre</h3>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-10">
            <form method="post" asp-action="Delete">
                <input type="hidden" asp-for="EspecialidadId" />
               
                <div class="form-group">
                    <label class="control-label"> Nombre</label>
                    <input class="form-control" asp-for="Nombre" disabled />

                </div>
                
                <div class="form-group">                        
                    <input type="submit" class="btn btn-primary" value="Eliminar una Especialidad" />

                </div>
            </form>
        </div>
    </div>
</div>