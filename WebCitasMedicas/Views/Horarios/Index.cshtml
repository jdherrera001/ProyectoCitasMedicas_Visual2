@using Modelo.Entidades;
@model IEnumerable<Horario>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Horarios</h1>

<p>Se presente a continuacion la lista de horarios registrados en el sistema de Citas Medicas</p>

<div class="container">
    @if (TempData["mensaje"] != null)
    {
        <div class="alert alert-warning alert-dismissible fade show" role="alert">
            @TempData["mensaje"]
            <button type="button" class="close" data-dismiss="alert" aria-label="close">
                <span aria-hidden="true">
                    &times;
                </span>
            </button>
        </div>
    }

    <div class="row">
        <div class="col-sm-6">
            <h3>Lista de Horarios</h3>
        </div>
        <div class="col-sm-6">
            <a class="btn btn-success d-block"
               asp-controller="Horarios" asp-action="Create">
                Crear Nuevo Horario
            </a>
        </div>
    </div>
    <div class="row">
        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <td> Horario Id </td>
                    <td> Hora Inicio </td>
                    <td> Hora Fin </td>
                    <td> Cupo Límite </td>
                    <td> Acciones </td>
                </tr>
            </thead>
            <tbody>
                @foreach (Horario horario in Model)
                {
                <tr>
                    <td> @horario.HorarioId </td>
                    <td> @horario.Hora_Inicio.ToString(@"hh\:mm") </td>
                    <td> @horario.Hora_Fin.ToString(@"hh\:mm") </td>
                    <td> @horario.Cupo_Limite </td>
                    <td>
                        <a class="btn btn-warning"
                           asp-controller="Horarios" asp-action="Edit" asp-route-id="@horario.HorarioId">
                            Editar
                        </a>
                        <a class="btn btn-danger"
                           asp-controller="Horarios" asp-action="Delete" asp-route-id="@horario.HorarioId">
                            Borrar
                        </a>
                    </td>
                </tr>
                }
            </tbody>
        </table>
    </div>
</div>

