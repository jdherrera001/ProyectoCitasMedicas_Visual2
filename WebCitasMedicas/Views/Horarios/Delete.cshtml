@using Modelo.Entidades;
@model Horario
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<h1>Eliminacion de Horarios</h1>
<p>Formulario para el borrado de horarios del Sistema de Citas Medicas</p>

<div class="container">
    <div class="row">
        <div class="col-sm-12">
            <h3>Esta seguro que desea eliminar el horario: @Model.HorarioId</h3>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-10">
            <form method="post" asp-action="Delete">
                <input type="hidden" asp-for="HorarioId" />               
                <div class="form-group">
                    <label class="control-label"> Hora Inicio</label>
                    <input class="form-control" asp-for="Hora_Fin" disabled />
                    <label class="control-label"> Hora Fin</label>
                    <input class="form-control" asp-for="Hora_Fin" />
                    <label class="control-label"> Cupo Límite</label>
                    <input class="form-control" asp-for="Cupo_Limite" />                   
                </div>                
                <div class="form-group">                        
                    <input type="submit" class="btn btn-primary" value="Eliminar un Horario" />
                </div>
            </form>
        </div>
    </div>
</div>