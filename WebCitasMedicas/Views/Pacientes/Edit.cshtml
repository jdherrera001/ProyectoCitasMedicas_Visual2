@using Modelo.Entidades;
@model Paciente
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<h1>Edicion de Pacientes</h1>
<p>Formulario para la edicion de pacientes del Sistema de Citas medicas</p>

<div class="container">
    <div class="row">
        <div class="col-sm-12">
            <h3>Ud. esta actualizazando el Paciente: @Model.Nombre</h3>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-10">
            <form method="post" asp-action="Edit">
                <input type="hidden" asp-for="PacienteId" />
                <div class="form-group">
                    <label class="control-label"> No. Cédula</label>
                    <input class="form-control" asp-for="Cedula" />
                </div>
                <div class="form-group">
                    <label class="control-label"> Nombre</label>
                    <input class="form-control" asp-for="Nombre" />
                </div>
                <div class="form-group">
                    <label class="control-label"> Correo</label>
                    <input class="form-control" asp-for="Email" />

                </div>
                <div class="form-group">                        
                    <input type="submit" class="btn btn-primary" value="Actualizar Paciente" />

                </div>
            </form>
        </div>
    </div>
</div>