@using Modelo.Entidades;
@model Paciente
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<h1>Eliminacion de Pacientes</h1>
<p>Formulario para el borrado de pacientes del Sistema de Citas Medicas</p>

<div class="container">
    <div class="row">
        <div class="col-sm-12">
            <h3>Esta seguro que desea eliminar   el Paciente: @Model.Nombre</h3>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-10">
            <form method="post" asp-action="Delete">
                <input type="hidden" asp-for="PacienteId" />
               
                <div class="form-group">
                    <label class="control-label"> Nombre</label>
                    <input class="form-control" asp-for="Nombre" disabled />

                </div>
                <div class="form-group">
                    <label class="control-label"> Correo</label>
                    <input class="form-control" asp-for="Email" disabled />

                </div>
                <div class="form-group">                        
                    <input type="submit" class="btn btn-primary" value="Eliminar un Paciente" />

                </div>
            </form>
        </div>
    </div>
</div>