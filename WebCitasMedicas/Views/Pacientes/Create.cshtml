@using Modelo.Entidades;
@model Paciente
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Pacientes</h1>
<p>Se presenta a continuacion edicion de pacientes en el Sistema de Citas Medicas</p>



<div class="container">
    <div class="row">
        <div class="col-sm-12">
            <h3>Crear nuevo paciente</h3>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-10">
            <form method="post" asp-action="Create">
                <div class="form-group">
                    <label class="control-label"> No. Cédula</label>
                    <input class="form-control" asp-for="Cedula" />
                   
                </div>
                <div class="form-group">
                    <label class="control-label"> Nombre</label>
                    <input class="form-control" asp-for="Nombre" />
                </div>
                <div class="form-group">
                    <label class="control-label"> Correo</label>
                    <input class="form-control" asp-for="Email" />

                </div>
                <div class="form-group">

                    <input type="submit" class="btn btn-primary" value="Crear Paciente" />

                </div>
            </form>
        </div>
    </div>
</div>