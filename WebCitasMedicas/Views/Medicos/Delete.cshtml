@using Modelo.Entidades;
@model Medico
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<h1>Eliminacion de Médicos</h1>
<p>Formulario para el borrado de especialidades del Sistema de Citas Medicas</p>

<div class="container">
    <div class="row">
        <div class="col-sm-12">
            <h3>Esta seguro que desea eliminar el Médico: @Model.Nombre</h3>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-10">
            <form method="post" asp-action="Delete">
                <input type="hidden" asp-for="MedicoId" />
               
                <div class="form-group">
                    <label class="control-label"> Nombre</label>
                    <input class="form-control" asp-for="Nombre" disabled />
                    <label class="control-label"> Teléfono</label>
                    <input class="form-control" asp-for="Telefono" />
                    <label class="control-label"> Correo Electrónico</label>
                    <input class="form-control" asp-for="Email" />
                    <label class="control-label"> Especialidad</label>
                    <select class="form-control"
                            asp-for="EspecialidadId"
                            asp-items="@ViewBag.selectListaEspecialidades">
                        <option value="">--Seleccionar una Especialidad--</option>
                    </select>
                </div>
                
                <div class="form-group">                        
                    <input type="submit" class="btn btn-primary" value="Eliminar el Médico" />

                </div>
            </form>
        </div>
    </div>
</div>