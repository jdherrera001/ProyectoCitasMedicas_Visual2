@using Modelo.Entidades;
@model Medico
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Medicos</h1>
<p>Se presenta a continuacion edición de Medicos en el Sistema de Citas Medicas</p>

<div class="container">
    <div class="row">
        <div class="col-sm-12">
            <h3>Crear nuevo Medico</h3>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-10">
            <form method="post" asp-action="Create">
                <div class="form-group">
                    <label class="control-label">No. Cédula</label>
                    <input class="form-control" asp-for="Cedula" />
                    <label class="control-label"> Nombre</label>
                    <input class="form-control" asp-for="Nombre" />
                    <label class="control-label"> Teléfono</label>
                    <input class="form-control" asp-for="Telefono" />
                    <label class="control-label"> Correo Electrónico</label>
                    <input class="form-control" asp-for="Email" />
                    <label class="control-label"> Especialidad</label>
                    <select class="form-control"
                            asp-for="EspecialidadId"
                            asp-items="@ViewBag.selectListaEspecialidades">
                        <option value="">--Seleccionar una Especialidad--</option>
                    </select>
                    <input type="hidden" asp-for="CalendarioId" value="2"  />
                </div>

                <div class="form-group">

                    <input type="submit" class="btn btn-primary" value="Crear Médico" />

                </div>
            </form>
        </div>
    </div>
</div>